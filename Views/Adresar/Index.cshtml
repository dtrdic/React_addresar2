@model IEnumerable<Adressar_TestApp.Models.Person>

@{
    ViewData["Title"] = "Index";
}

<div id="like_button_container">
             <h4>React component</h4>
</div>

<h1>Index</h1>
<br />
<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<form asp-controller="Adresar" asp-action="Index" method="get">
    <div class="card card-border-top mt-3">
        <div class="card-body">
            <div class="row">
                <div class="col">
                    Name: <input type="text" name="Name" style="margin-left:16px">
                </div>
                <div class="col">
                    Last Name: <input type="text" name="LastName" style="margin-left:31px">
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col">
                    Address: <input type="text" name="Address">
                </div>
                <div class="col">
                    Phone Number: <input type="text" name="Phone">
                </div>
            </div>
            <div class="row mt-3">
                <div class="col">
                    <div class="float-left">
                        <input type="submit" value="Filter" style="margin-right:20px;" />
                        <button><a asp-area="" style="text-decoration:none; color:black;" asp-controller="Adresar" asp-action="Index">Clear Filters</a></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">View</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
